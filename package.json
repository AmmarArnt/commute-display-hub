{
  "name": "sl-departures-api",
  "version": "1.0.0",
  "description": "API to fetch SL departures from Trafiklab",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/start.js",
    "test": "jest --silent"
  },
  "keywords": [
    "trafiklab",
    "sl",
    "api",
    "departures"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "rpi-led-matrix": "^1.15.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.1.0"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
